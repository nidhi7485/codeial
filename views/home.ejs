<h1>Codeial/<%= title %></h1>

<section>
  <h2>User Post</h2>
  <% if(locals.user){ %>
  <form action="/posts/create" id="user-post" method="POST">
    <textarea name="content" rows="3" cols="30"></textarea>
    <input type="submit" value="Post" />
  </form>
  <% } %>
  <div id="post-list-container">
    <ul>
      <% for(post of posts){ %> <%- include('_post') -%> <% } %>
    </ul>
  </div>
</section>

<section id="user-friend">
  <h4>Friends</h4>
  <% for(u of all_user){ %>
  <p><a href="/users/profile/<%= u.id %>"><%= u.name %></a></p>
  <% } %>
</section>
